<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopFortnite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/fortnite-theme.css" />
    <link rel="stylesheet" href="~/css/fortnite-animations.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/img/logo.png" alt="ShopFortnite Logo" style="height: 40px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                             Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cosmetics">
                             Loja de Items
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Users">
                             Usuários
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/swagger" target="_blank">
                             API Docs
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (Context.Request.Cookies.ContainsKey("AuthToken"))
                    {
                        @if (Context.Request.Cookies.ContainsKey("UserName"))
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <i class="bi bi-person-circle"></i> Olá, @Context.Request.Cookies["UserName"]
                                </span>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="/Profile">
                                <i class="bi bi-wallet2"></i> Perfil
                            </a>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="/Account/Logout" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link">
                                    <i class="bi bi-box-arrow-right"></i> Sair
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right"></i> Entrar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">
                                <i class="bi bi-person-plus"></i> Registrar
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0">&copy; 2024 ShopFortnite - teste ESO</p>
            <small class="text-muted">
                API REST + Razor Pages + JWT + EF Core + SQLite
            </small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
