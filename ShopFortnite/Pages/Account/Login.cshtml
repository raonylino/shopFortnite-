@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">
                        <i class="bi bi-box-arrow-in-right"></i> Entrar
                    </h2>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Entrar
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-0">Não tem uma conta?</p>
                        <a href="/Account/Register" class="btn btn-outline-secondary mt-2">
                            <i class="bi bi-person-plus"></i> Criar Conta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
